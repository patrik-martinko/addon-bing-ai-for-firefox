{
    "manifest_version": 2,
    "name": "Bing AI for Firefox",
    "description": "Allows using Bing AI chatbot with Mozilla Firefox.",
    "version": "1.2.0",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://*.bing.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "browser_action": {
        "default_icon": "icon-48.png"
    }
}